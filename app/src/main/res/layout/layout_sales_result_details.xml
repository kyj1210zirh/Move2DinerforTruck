<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_Empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매 내역이 없습니다."
            android:textColor="#9000"
            app:layout_constraintStart_toStartOf="@+id/rvDetailResult"
            app:layout_constraintEnd_toEndOf="@+id/rvDetailResult"
            app:layout_constraintTop_toTopOf="@+id/rvDetailResult"
            app:layout_constraintBottom_toBottomOf="@+id/rvDetailResult"
            android:visibility="gone"/>

        <com.mjc.yhs.move2diner.RecyclerViewEmptySupport
            android:id="@+id/rvDetailResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#000"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="5dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 합계"
                android:textSize="15sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="금액"
                android:textSize="15sp"
                android:textColor="#000" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>