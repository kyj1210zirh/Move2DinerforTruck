<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="영업장소"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtSalesPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:textColorHint="#4ABECA"
        android:inputType="text"
        android:hint="영업 장소를 입력하세요" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="영업요일"
        android:textColor="#5E5E5E"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtStartDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="월"
            android:inputType="text"
            android:gravity="center"
            android:textColorHint="#4ABECA" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#4ABECA"
            android:text="-"
            />

        <EditText
            android:id="@+id/txtEndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="금"
            android:inputType="text"
            android:gravity="right"
            android:textColorHint="#4ABECA" />

    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="영업시간"
        android:textColor="#5E5E5E"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtOpenHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="00"
            android:inputType="time"
            android:gravity="center"
            android:textColorHint="#4ABECA" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#4ABECA"
            android:text=":"
            />
        <EditText
            android:id="@+id/txtOpenMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="00"
            android:inputType="time"
            android:gravity="center"
            android:textColorHint="#4ABECA" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#4ABECA"
            android:text="-"
            />


        <EditText
            android:id="@+id/txtCloseHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="00"
            android:inputType="time"
            android:gravity="center"
            android:textColorHint="#4ABECA" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#4ABECA"
            android:text=":"
            />

        <EditText
            android:id="@+id/txtCloseMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="00"
            android:inputType="time"
            android:gravity="center"
            android:textColorHint="#4ABECA" />

    </LinearLayout>


</LinearLayout>