<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textViewTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="textViewOther" parent="@android:style/Widget.TextView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="textViewOther2" parent="@android:style/Widget.TextView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="textViewOther_small" parent="@android:style/Widget.TextView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="recycleItem">
        <item name="android:background">@drawable/btn_outline_white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="titlebar" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#F0F0F0</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="bg_edittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_icon</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:drawableTint">#ffffff</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">#C0C0C0</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="btn_round_nomal" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_round_background</item>
        <item name="android:backgroundTint">#3498FD</item>

    </style>
</resources>
